<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <is.hello.sense.ui.widget.SlidingLayersView
        android:id="@+id/activity_home_sliding_layers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <FrameLayout
            android:id="@+id/activity_home_backside_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background" />

        <FrameLayout
            android:id="@+id/activity_home_content_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_timeline">

            <is.hello.sense.ui.widget.ExtendedViewPager
                android:id="@+id/activity_home_view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/divider_size" />

            <View
                android:layout_gravity="top"
                style="@style/Divider.Horizontal" />

            <ImageButton
                android:id="@+id/fragment_timeline_smart_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/gap_small"
                android:layout_gravity="end|bottom"
                android:src="@drawable/timeline_smart_alarm"
                android:contentDescription="@string/action_show_alarms"
                android:visibility="invisible"
                style="@style/AppTheme.Button.Circular"/>

        </FrameLayout>

    </is.hello.sense.ui.widget.SlidingLayersView>

</RelativeLayout>
