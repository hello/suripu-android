<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/item_static_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/gap_outer"
        android:layout_marginTop="@dimen/gap_medium"
        android:layout_marginBottom="@dimen/gap_medium"
        android:gravity="start"
        android:textAppearance="@style/AppTheme.Text.Body.Medium"
        android:text="@string/app_name"/>

    <TextView
        android:id="@+id/item_static_text_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_static_text_title"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/gap_small"
        android:layout_marginEnd="@dimen/gap_outer"
        android:layout_marginTop="@dimen/gap_medium"
        android:layout_marginBottom="@dimen/gap_medium"
        android:layout_centerVertical="true"
        android:gravity="end|center_vertical"
        android:textAppearance="@style/AppTheme.Text.Body"
        android:text="@string/app_name"/>

</RelativeLayout>