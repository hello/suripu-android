<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/gap_outer"
    android:paddingRight="@dimen/gap_outer"
    android:paddingTop="@dimen/bottom_sheet_option_vertical_margin"
    android:paddingBottom="@dimen/bottom_sheet_option_vertical_margin"
    android:background="@drawable/selectable_dark_bounded"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/item_bottom_sheet_option_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/gap_medium"
        android:gravity="center_vertical|start"
        android:textAppearance="@style/AppTheme.Text.Body"
        android:textColor="@color/text_color_selector_dark" />

    <TextView
        android:id="@+id/item_bottom_sheet_option_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_small"
        android:layout_marginBottom="@dimen/gap_small"
        android:textAppearance="@style/AppTheme.Text.Body.Small"
        android:textColor="@color/text_dim" />

</LinearLayout>