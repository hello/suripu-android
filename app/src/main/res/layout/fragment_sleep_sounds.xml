<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_sleep_sounds_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/gap_outer_half"
        />

    <ProgressBar
        android:id="@+id/fragment_sleep_sounds_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <FrameLayout
        style="@style/AppTheme.Button.Circular"
        android:id="@+id/fragment_sleep_sounds_buttonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/gap_small"
        android:layout_marginEnd="@dimen/gap_small">

        <ImageButton
            android:id="@+id/fragment_sleep_sounds_playbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:padding="@dimen/gap_medium"
            android:visibility="invisible"/>

    </FrameLayout>
</RelativeLayout>