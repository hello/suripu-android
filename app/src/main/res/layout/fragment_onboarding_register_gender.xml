<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_onboarding">

    <Button
        android:id="@+id/fragment_onboarding_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_small"
        android:layout_marginLeft="@dimen/gap_outer"
        android:layout_marginRight="@dimen/gap_outer"
        android:layout_marginBottom="@dimen/gap_outer"
        android:layout_alignParentBottom="true"
        android:text="@string/action_next"
        style="@style/AppTheme.Button.Rounded"/>

    <Button
        android:id="@+id/fragment_onboarding_skip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_small"
        android:layout_above="@id/fragment_onboarding_next"
        android:text="@string/action_skip"
        style="@style/AppTheme.Button.Borderless.Onboarding"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/fragment_onboarding_skip"
        android:fillViewport="true"
        style="@style/AppTheme.FadingScrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/background_onboarding">

            <TextView
                android:id="@+id/fragment_onboarding_register_gender_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gap_outer"
                android:layout_marginLeft="@dimen/gap_outer"
                android:layout_marginRight="@dimen/gap_outer"
                android:layout_marginBottom="@dimen/gap_small"
                android:textAppearance="@style/AppTheme.Text.Heading"
                android:lineSpacingMultiplier="@dimen/line_multiple_heading"
                android:text="@string/title_register_gender"/>

            <TextView
                android:id="@+id/fragment_onboarding_register_gender_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/gap_outer"
                android:layout_marginRight="@dimen/gap_outer"
                android:textAppearance="@style/AppTheme.Text.Subheading"
                android:lineSpacingMultiplier="@dimen/line_multiple_subheading"
                android:text="@string/onboarding_register_info_explanation"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:minHeight="@dimen/gap_small"/>

            <is.hello.sense.ui.widget.SelectorLinearLayout
                android:id="@+id/fragment_onboarding_register_gender_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/gap_outer"
                android:layout_marginRight="@dimen/gap_outer"
                android:orientation="horizontal"
                android:gravity="center">

                <ToggleButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/onboarding_gender_male"
                    android:drawablePadding="@dimen/gap_large"
                    android:textOn="@string/gender_male"
                    android:textOff="@string/gender_male"
                    style="@style/AppTheme.Button.Gender"/>

                <ToggleButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/onboarding_gender_female"
                    android:drawablePadding="@dimen/gap_large"
                    android:textOn="@string/gender_female"
                    android:textOff="@string/gender_female"
                    style="@style/AppTheme.Button.Gender"/>

            </is.hello.sense.ui.widget.SelectorLinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:minHeight="@dimen/gap_small"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>