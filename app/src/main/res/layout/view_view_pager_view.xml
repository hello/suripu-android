<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <is.hello.sense.ui.widget.FixedSwipeRefreshLayout
        android:id="@+id/view_view_pager_refresh_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/view_view_pager_extended_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none"
            app:senseFadingEdgeStyle="rounded">

            <android.support.design.widget.TabLayout
                android:id="@+id/view_view_pager_tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top" />
        </android.support.v4.view.ViewPager>


    </is.hello.sense.ui.widget.FixedSwipeRefreshLayout>

    <ProgressBar
        android:id="@+id/view_view_pager_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

</RelativeLayout>