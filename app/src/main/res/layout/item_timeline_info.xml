<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/gap_outer">

    <TextView
        android:id="@+id/item_timeline_info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/gap_tiny"
        android:textAppearance="@style/AppTheme.Text.Body.MidSized.Neutral"
        android:textColor="@color/text_medium"
        android:lineSpacingMultiplier="@dimen/line_multiple_body" />

    <me.grantland.widget.AutofitTextView
        android:id="@+id/item_timeline_info_reading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/AppTheme.Text.Score.Tiny"
        android:singleLine="true" />

</LinearLayout>