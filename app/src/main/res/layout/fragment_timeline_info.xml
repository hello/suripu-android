<?xml version="1.0" encoding="utf-8"?>
<FrameLayout style="@style/AppTheme.DarkOverlay"
             xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_timeline_info_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_timeline" />

    <LinearLayout
        android:id="@+id/fragment_timeline_info_header"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:padding="@dimen/gap_outer"
        android:background="@color/sensor_ideal">

        <TextView
            android:id="@+id/fragment_timeline_info_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/gap_xsmall"
            android:textAppearance="?attr/senseTextAppearanceHeading"
            android:textColor="@color/white"
            android:text="@string/label_sleep_summary" />

        <TextView
            android:id="@+id/fragment_timeline_info_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/AppTheme.Text.Body.MidSized"
            android:lineSpacingMultiplier="@dimen/line_multiple_body"
            android:textColor="@color/text_dim_light"/>

    </LinearLayout>

</FrameLayout>