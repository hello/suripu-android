<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/gap_outer"
    android:background="@color/background_onboarding">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/AppTheme.Text.Heading"
        android:lineSpacingMultiplier="@dimen/line_multiple_heading"
        android:text="@string/title_register_birthday"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_small"
        android:textAppearance="@style/AppTheme.Text.Subheading"
        android:lineSpacingMultiplier="@dimen/line_multiple_subheading"
        android:text="@string/onboarding_register_info_explanation"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/fragment_onboarding_birthday_fields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TableLayout
        android:id="@+id/fragment_onboarding_register_birthday_keys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2">

        <TableRow
            android:layout_marginBottom="@dimen/gap_medium">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="1"
                android:text="@string/number_1"
                style="@style/AppTheme.Button.Number"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/gap_outer"
                android:layout_marginEnd="@dimen/gap_outer"
                android:tag="2"
                android:text="@string/number_2"
                style="@style/AppTheme.Button.Number"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="3"
                android:text="@string/number_3"
                style="@style/AppTheme.Button.Number"/>

        </TableRow>

        <TableRow
            android:layout_marginBottom="@dimen/gap_medium">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="4"
                android:text="@string/number_4"
                style="@style/AppTheme.Button.Number"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/gap_outer"
                android:layout_marginEnd="@dimen/gap_outer"
                android:tag="5"
                android:text="@string/number_5"
                style="@style/AppTheme.Button.Number"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="6"
                android:text="@string/number_6"
                style="@style/AppTheme.Button.Number"/>

        </TableRow>

        <TableRow
            android:layout_marginBottom="@dimen/gap_medium">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="7"
                android:text="@string/number_7"
                style="@style/AppTheme.Button.Number"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/gap_outer"
                android:layout_marginEnd="@dimen/gap_outer"
                android:tag="8"
                android:text="@string/number_8"
                style="@style/AppTheme.Button.Number"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="9"
                android:text="@string/number_9"
                style="@style/AppTheme.Button.Number"/>

        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/fragment_onboarding_register_birthday_skip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="-1"
                android:text="@string/action_skip_short"
                style="@style/AppTheme.Button.Number"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/gap_outer"
                android:layout_marginEnd="@dimen/gap_outer"
                android:tag="0"
                android:text="@string/number_0"
                style="@style/AppTheme.Button.Number"/>
            <Button
                android:id="@+id/fragment_onboarding_register_birthday_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="-1"
                android:text="@string/action_delete"
                style="@style/AppTheme.Button.Number"/>

        </TableRow>

    </TableLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>