<?xml version="1.0" encoding="utf-8"?>

<!-- Must have android:clickable="true" to work with
     FragmentNavigationFragment#overlayFragmentAllowingStateLoss(...) -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/gap_outer"
    android:background="@color/background_onboarding"
    android:clickable="true">

    <TextView
        android:id="@+id/fragment_onboarding_register_weight_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/senseTextAppearanceHeading"
        android:lineSpacingMultiplier="@dimen/line_multiple_heading"
        android:text="@string/title_register_weight"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_small"
        android:textAppearance="?attr/senseTextAppearanceSubheading"
        android:lineSpacingMultiplier="@dimen/line_multiple_subheading"
        android:text="@string/onboarding_register_info_explanation"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/fragment_onboarding_register_weight_scale_reading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/gap_medium"
        android:textAppearance="@style/AppTheme.Text.ScaleReading"
        android:gravity="center" />

    <is.hello.sense.ui.widget.ScaleView
        android:id="@+id/fragment_onboarding_register_weight_scale"
        android:layout_width="match_parent"
        android:layout_height="@dimen/scale_view_size"
        app:scaleMinValue="0"
        app:scaleMaxValue="1000"
        app:scaleValue="130"
        app:scaleOrientation="horizontal"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/fragment_onboarding_skip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_small"
        android:text="@string/action_skip"
        style="@style/AppTheme.Button.Borderless.Onboarding"/>

    <Button
        android:id="@+id/fragment_onboarding_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_small"
        android:text="@string/action_continue"
        style="@style/AppTheme.Button.Rounded"/>

</LinearLayout>