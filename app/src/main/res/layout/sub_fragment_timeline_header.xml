<?xml version="1.0" encoding="utf-8"?>

<is.hello.sense.ui.widget.BlockableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background_timeline">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height">

        <ImageButton
            android:id="@+id/fragment_timeline_header_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_menu_closed"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/fragment_timeline_header_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_share_enabled"
            android:contentDescription="@string/action_share" />

        <TextView
            android:id="@+id/fragment_timeline_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/fragment_timeline_header_menu"
            android:layout_toStartOf="@id/fragment_timeline_header_share"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textAppearance="@style/AppTheme.Text.ScreenTitle"
            android:text="@string/format_date_last_night"
            android:singleLine="true"
            android:ellipsize="end"
            android:background="@drawable/selectable_dark_bounded"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/sub_fragment_timeline_header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/timeline_header_min_height" />

    <is.hello.sense.ui.widget.SelectorView
        android:id="@+id/sub_fragment_timeline_header_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ToggleButton
            android:layout_width="0dp"
            android:layout_height="@dimen/timeline_header_tab_height"
            android:layout_weight="1"
            android:text="@string/label_sleep_summary"
            android:textOn="@string/label_sleep_summary"
            android:textOff="@string/label_sleep_summary"
            style="@style/AppTheme.Button.ModeSelector.Timeline"/>

        <View
            android:layout_marginTop="@dimen/gap_medium"
            android:layout_marginBottom="@dimen/gap_medium"
            style="@style/Divider.Vertical" />

        <ToggleButton
            android:layout_width="0dp"
            android:layout_height="@dimen/timeline_header_tab_height"
            android:layout_weight="1"
            android:text="@string/label_before_sleep"
            android:textOn="@string/label_before_sleep"
            android:textOff="@string/label_before_sleep"
            style="@style/AppTheme.Button.ModeSelector.Timeline"/>

    </is.hello.sense.ui.widget.SelectorView>

</is.hello.sense.ui.widget.BlockableLinearLayout>