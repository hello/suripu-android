<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        style="@style/AppTheme.FadingScrollView">

        <LinearLayout
            android:id="@+id/fragment_dialog_insight_info_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:gravity="center"
            android:animateLayoutChanges="true">

            <ImageView
                android:id="@+id/fragment_dialog_insight_info_illustration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                tools:ignore="ContentDescription"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/fragment_dialog_insight_info_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gap_xlarge"
                android:layout_marginLeft="@dimen/gap_outer"
                android:layout_marginRight="@dimen/gap_outer"
                android:layout_marginBottom="@dimen/gap_outer"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_heading"
                android:lineSpacingMultiplier="@dimen/line_multiple_heading"
                android:text="@string/dialog_loading_message"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/fragment_dialog_insight_info_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/gap_outer"
                android:layout_marginRight="@dimen/gap_outer"
                android:layout_marginBottom="@dimen/gap_outer"
                android:textAppearance="@style/AppTheme.Text.Body"
                android:textColor="@color/text_medium"
                android:lineSpacingMultiplier="@dimen/line_multiple_body_medium"
                android:visibility="gone"/>

            <ProgressBar
                android:id="@+id/fragment_dialog_insight_info_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/gap_small"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fragment_dialog_insight_info_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppTheme.Button.Rounded"
            android:text="@android:string/ok"/>

    </LinearLayout>

</LinearLayout>