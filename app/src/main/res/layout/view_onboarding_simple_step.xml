<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/sub_fragment_onboarding_toolbar"
        layout="@layout/sub_fragment_onboarding_toolbar" />

    <Button
        android:id="@+id/view_onboarding_simple_step_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/gap_small"
        android:layout_marginLeft="@dimen/gap_outer"
        android:layout_marginRight="@dimen/gap_outer"
        android:layout_marginBottom="@dimen/gap_outer"
        android:text="@string/action_continue"
        style="@style/AppTheme.Button.Rounded"/>

    <Button
        android:id="@+id/view_onboarding_simple_step_secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_small"
        android:layout_marginLeft="@dimen/gap_outer"
        android:layout_marginRight="@dimen/gap_outer"
        android:layout_above="@id/view_onboarding_simple_step_primary"
        android:text="@string/action_skip"
        style="@style/AppTheme.Button.Borderless.Onboarding"/>

    <ScrollView
        android:id="@+id/view_onboarding_simple_step_contents_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/view_onboarding_simple_step_secondary"
        android:layout_below="@id/sub_fragment_onboarding_toolbar"
        android:fillViewport="true"
        style="@style/AppTheme.FadingScrollView">

        <LinearLayout
            android:id="@+id/view_onboarding_simple_step_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/background_onboarding">

            <TextView
                android:id="@+id/view_onboarding_simple_step_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/gap_outer"
                android:layout_marginRight="@dimen/gap_outer"
                android:layout_marginBottom="@dimen/gap_small"
                android:textAppearance="?attr/senseTextAppearanceHeading"
                android:lineSpacingMultiplier="@dimen/line_multiple_heading"
                android:text="@string/app_name"/>

            <TextView
                android:id="@+id/view_onboarding_simple_step_subheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/gap_outer"
                android:layout_marginRight="@dimen/gap_outer"
                android:layout_marginBottom="@dimen/gap_small"
                android:textAppearance="?attr/senseTextAppearanceSubheading"
                android:lineSpacingMultiplier="@dimen/line_multiple_subheading" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- diagram goes here -->

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

    </ScrollView>

</merge>