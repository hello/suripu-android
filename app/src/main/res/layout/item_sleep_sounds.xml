<?xml version="1.0" encoding="utf-8"?>
<is.hello.sense.ui.widget.RoundedRelativeLayout
    android:id="@+id/item_sleep_sounds_sound_holder"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/gap_medium"
    android:paddingTop="@dimen/gap_medium">

    <ImageView
        android:id="@+id/item_sleep_sounds_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/gap_medium"
        android:layout_marginRight="@dimen/gap_medium"
        android:contentDescription="@string/content_description_sleep_sounds"/>

    <TextView
        android:id="@+id/item_sleep_sounds_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/gap_small"
        android:layout_toEndOf="@+id/item_sleep_sounds_image"
        style="@style/AppTheme.Text.Player.Item"/>

    <TextView
        android:id="@+id/item_sleep_sounds_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/gap_outer"
        android:textColor="@color/text_color_selector_light_accent"/>
</is.hello.sense.ui.widget.RoundedRelativeLayout>