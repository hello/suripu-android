<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/AppTheme.Card.Clickable"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_message_card_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/item_message_card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:paddingLeft="@dimen/x2"
        android:paddingRight="@dimen/x2"
        android:paddingTop="@dimen/x2"
        android:singleLine="true"
        android:textAppearance="@style/AppTheme.Text.Body"/>

    <TextView
        android:id="@+id/item_message_card_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x3"
        android:gravity="center"
        android:lineSpacingMultiplier="@dimen/line_multiple_body"
        android:textAppearance="@style/AppTheme.Text.Body.MidSized"/>

    <Button
        android:id="@+id/item_message_card_action"
        style="@style/AppTheme.Button.Rounded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x2"
        android:layout_marginLeft="@dimen/x2"
        android:layout_marginRight="@dimen/x2"
        android:text="@android:string/ok"/>

</LinearLayout>