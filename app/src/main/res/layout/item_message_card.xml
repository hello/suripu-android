<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout
        style="@style/AppTheme.Card.Clickable"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_message_card_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            tools:ignore="ContentDescription"/>

        <is.hello.sense.ui.widget.ImageTextView
            android:id="@+id/item_message_card_image_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/x3"
            android:layout_marginEnd="@dimen/x3"
            android:layout_marginTop="@dimen/x2"/>

        <TextView
            android:id="@+id/item_message_card_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x3"
            android:layout_marginStart="@dimen/x3"
            android:layout_marginTop="@dimen/x2"
            android:gravity="center"
            android:lineSpacingMultiplier="@dimen/line_multiple_body"
            android:textAppearance="@style/AppTheme.Text.Body.MidSized"/>

        <Button
            android:id="@+id/item_message_card_action"
            style="@style/AppTheme.Button.Rounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x2"
            android:layout_marginEnd="@dimen/x3"
            android:layout_marginStart="@dimen/x3"
            android:layout_marginTop="@dimen/x2"
            android:text="@android:string/ok"/>

    </LinearLayout>
</layout>