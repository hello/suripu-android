<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <View
        android:id="@+id/fragment_insight_info_fill"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_light"/>

    <RelativeLayout
        android:id="@+id/fragment_insight_info_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x7"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical">

        <View
            android:id="@+id/fragment_insight_info_divider_horizontal"
            style="@style/Divider.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_size"
            android:layout_alignParentTop="true"/>

        <Button
            android:id="@+id/fragment_insight_info_done"
            style="@style/Body"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@id/fragment_insight_info_divider_horizontal"
            android:layout_toStartOf="@+id/fragment_insight_info_divider_vertical"
            android:gravity="center"
            android:text="@string/action_close"
            android:textAllCaps="true"/>

        <View
            android:id="@+id/fragment_insight_info_divider_vertical"
            style="@style/Divider.Vertical"
            android:layout_width="@dimen/divider_size"
            android:layout_height="match_parent"
            android:layout_below="@id/fragment_insight_info_divider_horizontal"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/x1"/>


        <Button
            android:id="@+id/fragment_insight_info_share"
            style="@style/Body.Link"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/fragment_insight_info_divider_horizontal"
            android:layout_toEndOf="@+id/fragment_insight_info_divider_vertical"
            android:gravity="center"
            android:text="@string/action_share"
            android:textAllCaps="true"/>
    </RelativeLayout>

    <is.hello.sense.ui.widget.ExtendedScrollView
        android:id="@+id/fragment_insight_info_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/fragment_insight_info_bottom"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:id="@+id/fragment_insight_info_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <is.hello.sense.ui.widget.ParallaxImageView
                android:id="@+id/fragment_insight_info_illustration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x3"
                android:background="@color/background_insight_illustration"
                android:src="@drawable/empty_illustration"
                app:senseAspectRatio="2:1"/>

            <TextView
                android:id="@+id/fragment_insight_info_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x2"
                android:layout_marginLeft="@dimen/x3"
                android:layout_marginRight="@dimen/x3"
                android:fontFamily="sans-serif"
                android:lineSpacingMultiplier="@dimen/line_multiple_heading"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_size_heading"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/fragment_insight_info_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/gap_outer"
                android:layout_marginLeft="@dimen/x3"
                android:layout_marginRight="@dimen/x3"
                android:lineSpacingMultiplier="@dimen/line_multiple_body_medium"
                android:textAppearance="@style/AppTheme.Text.Body"
                android:textColor="@color/text_medium"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/fragment_insight_info_summary_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x2"
                android:layout_marginLeft="@dimen/x3"
                android:layout_marginRight="@dimen/x3"
                android:layout_marginTop="@dimen/x2"
                android:fontFamily="sans-serif-medium"
                android:text="@string/title_about_you"
                android:textAllCaps="true"
                android:textAppearance="@style/AppTheme.Text.SectionHeading.Large"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/fragment_insight_info_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x4"
                android:layout_marginLeft="@dimen/x3"
                android:layout_marginRight="@dimen/x3"
                android:background="@drawable/block_quote_vertical"
                android:lineSpacingMultiplier="@dimen/line_multiple_body_medium"
                android:textAppearance="@style/AppTheme.Text.Body.MidSized.Dim"
                android:visibility="gone"/>

        </LinearLayout>

    </is.hello.sense.ui.widget.ExtendedScrollView>

    <ImageView
        android:id="@+id/fragment_insight_info_top_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:scaleType="fitXY"
        android:src="@drawable/shadow_top_down"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/fragment_insight_info_bottom_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/fragment_insight_info_bottom"
        android:importantForAccessibility="no"
        android:scaleType="fitXY"
        android:src="@drawable/shadow_bottom_up"
        android:visibility="gone"/>

</RelativeLayout>