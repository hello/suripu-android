<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <RelativeLayout
        android:id="@+id/item_icon_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp">

        <ImageView
            android:id="@+id/item_settings_detail_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:importantForAccessibility="no"
            android:src="@drawable/icon_settings_advanced"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/item_settings_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_icon_container"
        android:layout_marginStart="@dimen/gap_outer"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:gravity="start"
        android:textAppearance="@style/AppTheme.Text.Body" />

    <TextView
        android:id="@+id/item_settings_detail_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_settings_detail_title"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/gap_small"
        android:layout_marginEnd="@dimen/gap_outer"
        android:layout_marginTop="@dimen/gap_medium"
        android:layout_marginBottom="@dimen/gap_small"
        android:layout_centerVertical="true"
        android:gravity="end|center_vertical"
        android:textAppearance="@style/AppTheme.Text.Body.MidSized"
        android:textColor="@color/text_dim"
        android:text="@string/missing_data_placeholder"
        android:maxLines="1"
        android:ellipsize="end" />

    <View
        android:id="@+id/item_settings_detail_divider"
        style="@style/Divider.Horizontal"
        android:layout_alignStart="@id/item_settings_detail_title"
        android:layout_below="@id/item_settings_detail_detail"
        android:layout_marginBottom="@dimen/gap_small"
        android:layout_marginEnd="@dimen/gap_outer" />

</RelativeLayout>