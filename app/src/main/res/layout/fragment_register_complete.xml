<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_dialog_loading_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fragment_onboarding_done_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/gap_outer"
        android:layout_marginRight="@dimen/gap_outer"
        android:drawableTop="@drawable/onboarding_done_check"
        android:drawablePadding="@dimen/gap_large"
        android:gravity="center"
        android:textAppearance="?attr/senseTextAppearanceSubheading"
        android:text="@string/onboarding_done_message_1"
        android:lineSpacingMultiplier="@dimen/line_multiple_subheading"
        android:visibility="invisible"
        android:alpha="0"/>

</FrameLayout>