<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_outer"
        android:layout_alignBottom="@+id/fragment_onboarding_room_check_sense"
        android:scaleType="fitXY"
        android:src="@drawable/onboarding_sense_background"
        android:importantForAccessibility="no"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/fragment_onboarding_room_check_sense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_xlarge"
        android:layout_marginBottom="@dimen/gap_large"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/onboarding_sense_inset_bottom"
        android:src="@drawable/onboarding_sense_grey"
        android:contentDescription="@string/app_name"/>

    <LinearLayout
        android:id="@+id/fragment_onboarding_room_check_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragment_onboarding_room_check_sense"
        android:layout_marginBottom="@dimen/gap_outer"
        android:orientation="vertical">

        <is.hello.sense.ui.common.DisabledHorizontalScrollView
            android:id="@+id/fragment_onboarding_room_check_sensors_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:fillViewport="false">

            <LinearLayout
                android:id="@+id/fragment_onboarding_room_check_sensors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gap_small"
                android:layout_marginLeft="@dimen/gap_outer"
                android:layout_marginRight="@dimen/gap_outer"
                android:orientation="horizontal"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:gravity="center"
                tools:ignore="ScrollViewSize"/>
        </is.hello.sense.ui.common.DisabledHorizontalScrollView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/fragment_onboarding_room_check_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/gap_large"
            android:gravity="center_horizontal|top"
            android:textAppearance="@style/AppTheme.Text.Body"
            android:text="@string/dialog_loading_message"
            android:maxLines="2"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/fragment_onboarding_room_check_score_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/fragment_onboarding_room_check_score_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/gap_outer"
                android:textAppearance="@style/AppTheme.Text.Score.Big"/>

            <TextView
                android:id="@+id/fragment_onboarding_room_check_score_unit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/gap_outer"
                android:textAppearance="@style/AppTheme.Text.Score.Unit"
                android:maxLines="1"
                android:gravity="center_horizontal|top"
                android:includeFontPadding="false"/>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

</RelativeLayout>