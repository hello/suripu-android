<?xml version="1.0" encoding="utf-8"?>

<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_trend_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/trends_title_height"
        android:gravity="center"
        android:singleLine="true"
        android:textAppearance="@style/AppTheme.Text.Trends.Title"/>

    <View
        android:id="@+id/item_trend_divider"
        style="@style/Divider.Horizontal"
        android:layout_height="@dimen/bottom_line"
        android:layout_marginBottom="@dimen/gap_small"
        android:background="@color/trends_line_divider"/>

    <!-- content view -->

    <LinearLayout
        android:id="@+id/item_trend_annotations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_card_content"
        android:orientation="horizontal" />

</merge>