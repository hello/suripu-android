<?xml version="1.0" encoding="utf-8"?>
<is.hello.sense.ui.widget.RoundedLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_bottom_alert"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/AppTheme.LargeCard">

        <TextView
            android:id="@+id/dialog_bottom_alert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x3"
            android:layout_marginStart="@dimen/x3"
            android:layout_marginEnd="@dimen/x3"
            android:layout_marginBottom="@dimen/x2"
            android:gravity="start"
            android:textAppearance="@style/AppTheme.Text.Heading.New" />

        <TextView
            android:id="@+id/dialog_bottom_alert_message"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/x3"
            android:layout_marginRight="@dimen/x3"
            android:layout_marginBottom="@dimen/x3"
            android:gravity="start"
            android:scrollbars="vertical"
            android:overScrollMode="ifContentScrolls"
            android:textAppearance="@style/AppTheme.Text.Body"
            android:lineSpacingMultiplier="@dimen/line_multiple_body" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_bottom_alert"
            android:layout_marginTop="@dimen/x1"
            android:layout_marginLeft="@dimen/gap_outer_dialog_buttons"
            android:layout_marginRight="@dimen/gap_outer_dialog_buttons"
            android:layout_marginBottom="@dimen/x1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dialog_bottom_alert_neutral"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/text_dim"
                style="@style/AppTheme.Button.Dialog.Positive"/>

            <Button
                android:id="@+id/dialog_bottom_alert_positive"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/blue6"
                style="@style/AppTheme.Button.Dialog.Positive"/>

        </LinearLayout>

</is.hello.sense.ui.widget.RoundedLinearLayout>