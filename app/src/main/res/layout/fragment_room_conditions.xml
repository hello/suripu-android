<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    android:id="@+id/fragment_room_conditions_root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <is.hello.sense.ui.widget.FixedSwipeRefreshLayout
        android:id="@+id/fragment_room_conditions_refresh_container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_room_conditions_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </is.hello.sense.ui.widget.FixedSwipeRefreshLayout>

    <ProgressBar
        android:id="@+id/fragment_room_conditions_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <!-- temporary toolbar components until RoomConditions extends ViewPagerFragment or uses delegate -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@color/background_light">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_gravity="center"
            android:textAppearance="@style/AppTheme.Text.ScreenTitle"/>
        <ImageButton
            android:id="@+id/fragment_room_conditions_settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/backside_icon_settings"
            android:layout_gravity="end|center_vertical"/>
    </FrameLayout>
</FrameLayout>

