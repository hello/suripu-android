<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <include layout="@layout/sub_fragment_onboarding_toolbar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_small"
        android:layout_marginLeft="@dimen/gap_outer"
        android:layout_marginRight="@dimen/gap_outer"
        android:layout_marginBottom="@dimen/gap_small"
        android:textAppearance="@style/AppTheme.Text.Heading"
        android:lineSpacingMultiplier="@dimen/line_multiple_heading"
        android:text="@string/title_choose_wifi_network"/>

    <TextView
        android:id="@+id/fragment_onboarding_wifi_networks_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gap_outer"
        android:layout_marginRight="@dimen/gap_outer"
        android:layout_marginBottom="@dimen/gap_large"
        android:textAppearance="@style/AppTheme.Text.Subheading"
        android:lineSpacingMultiplier="@dimen/line_multiple_subheading"
        android:text="@string/info_choose_wifi_network"
        android:visibility="invisible"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_borders_top_bottom"
            android:visibility="gone"/>

        <is.hello.sense.ui.widget.TintedProgressBar
            android:id="@+id/fragment_onboarding_wifi_networks_scanning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/fragment_onboarding_wifi_networks_scanning_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/fragment_onboarding_wifi_networks_scanning"
            android:layout_marginBottom="@dimen/gap_small"
            android:gravity="center"
            android:textAppearance="@style/AppTheme.Text.Body"
            android:text="@string/label_finding_wifi_networks"/>

    </RelativeLayout>

    <Button
        android:id="@+id/fragment_onboarding_wifi_networks_rescan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/gap_outer"
        android:text="@string/action_rescan"
        style="@style/AppTheme.Button.Borderless.Onboarding"
        android:visibility="invisible"/>

</LinearLayout>