<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_room_conditions_welcome_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/conditions_welcome"/>

    <TextView
        android:id="@+id/item_room_conditions_welcome_title"
        style="@style/Card.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_room_conditions_welcome_image"
        android:layout_marginTop="@dimen/x1"
        android:gravity="center"
        android:text="@string/room_conditions_welcome_title"/>

    <TextView
        android:id="@+id/item_room_conditions_welcome_message"
        style="@style/AppTheme.Text.Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_room_conditions_welcome_title"
        android:layout_marginBottom="@dimen/x4"
        android:layout_marginTop="@dimen/x1"
        android:layout_marginLeft="@dimen/x2"
        android:layout_marginRight="@dimen/x2"
        android:gravity="center"
        android:text="@string/room_conditions_welcome_message"/>

</RelativeLayout>