<?xml version="1.0" encoding="utf-8"?>
<ScrollView style="@style/AppTheme.Light"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:orientation="vertical">

    <LinearLayout
        android:id="@+id/fragment_device_details_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/fragment_device_details_alert"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/gap_outer"
            android:layout_marginEnd="@dimen/gap_outer"
            android:visibility="visible">

            <TextView
                android:id="@+id/fragment_device_details_alert_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/AppTheme.Text.Body.MidSized"
                android:text="@string/app_name"
                android:drawableLeft="@drawable/icon_warning"
                android:drawablePadding="@dimen/gap_small"
                android:gravity="center"
                android:layout_marginTop="@dimen/device_detail_progress_margin"
                android:layout_marginLeft="@dimen/gap_xsmall"
                android:layout_marginBottom="@dimen/device_detail_text_margin"
                android:lineSpacingMultiplier="@dimen/line_multiple_body"/>

            <ProgressBar
                android:id="@+id/fragment_device_details_alert_busy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/device_detail_progress_margin"
                android:layout_marginBottom="@dimen/device_detail_text_margin"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                style="@style/AppTheme.ProgressBar.Small" />

            <TextView
                android:id="@+id/fragment_device_details_alert_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="@style/AppTheme.Text.Body.MidSized"
                android:text="@string/app_name"
                android:lineSpacingMultiplier="@dimen/line_multiple_body"/>

            <Button
                android:id="@+id/fragment_device_details_alert_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gap_small"
                android:layout_marginBottom="@dimen/gap_small"
                android:text="@string/action_troubleshoot"
                style="@style/AppTheme.Button.Rounded" />

            <Button
                android:id="@+id/fragment_device_details_alert_action_secondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/action_retry"
                android:visibility="gone"
                style="@style/AppTheme.Button.Borderless.Accent.Bounded" />

            <View
                android:layout_marginTop="@dimen/device_detail_text_margin"
                style="@style/Divider.Horizontal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_device_details_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/gap_small"
            android:paddingBottom="@dimen/gap_small"
            android:orientation="vertical" />

        <View style="@style/Divider.Horizontal" />

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/item_device_support_footer" />

    </LinearLayout>

</ScrollView>
