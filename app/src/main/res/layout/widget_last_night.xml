<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_last_night"
    android:layout_width="match_parent"
    android:layout_height="@dimen/little_sleep_summary_height"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:baselineAligned="false"
    android:background="@drawable/background_widget_last_night"
    android:padding="@dimen/gap_tiny">

    <TextView
        android:id="@+id/widget_last_night_score"
        android:layout_width="@dimen/little_sleep_summary_width"
        android:layout_height="@dimen/little_sleep_summary_height"
        android:layout_gravity="center"
        android:textAppearance="@style/AppTheme.Text.TinyScore"
        android:gravity="center"
        android:text="@string/missing_data_placeholder"/>

    <FrameLayout
        android:layout_marginTop="@dimen/gap_medium"
        android:layout_marginBottom="@dimen/gap_medium"
        style="@style/Divider.Vertical" />

    <TextView
        android:id="@+id/widget_last_night_message"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/gap_medium"
        android:layout_marginEnd="@dimen/gap_medium"
        android:paddingTop="@dimen/gap_small"
        android:paddingBottom="@dimen/gap_small"
        android:gravity="center_vertical"
        android:textAppearance="@style/AppTheme.Text.Body.Light.MidSized"
        android:lineSpacingMultiplier="@dimen/line_multiple_body_small"
        android:text="@string/dialog_loading_message"
        android:ellipsize="end"/>

</LinearLayout>