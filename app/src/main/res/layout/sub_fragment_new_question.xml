<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sub_fragment_new_question"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/AppTheme.Card">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/gap_outer"
        android:gravity="center"
        android:textAppearance="@style/AppTheme.Text.SectionHeading"
        android:text="@string/label_new_question"/>

    <TextView
        android:id="@+id/sub_fragment_new_question_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gap_outer"
        android:layout_marginRight="@dimen/gap_outer"
        android:layout_marginBottom="@dimen/gap_small"
        android:gravity="center"
        android:textAppearance="@style/AppTheme.Text.Body"
        android:lineSpacingMultiplier="@dimen/body_text_line_multiple"
        android:text="@string/mock_question_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/sub_fragment_new_question_skip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/gap_outer"
            android:text="@string/action_skip"
            style="@style/AppTheme.Button.Dialog"/>

        <View
            android:layout_marginTop="@dimen/gap_medium"
            android:layout_marginBottom="@dimen/gap_medium"
            style="@style/Divider.Vertical" />

        <Button
            android:id="@+id/sub_fragment_new_question_answer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/gap_outer"
            android:text="@string/action_answer"
            style="@style/AppTheme.Button.Dialog.Positive"/>

    </LinearLayout>

</LinearLayout>
