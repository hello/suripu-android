<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/fragment_questions_container"
              style="@style/AppTheme.Light"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical"
              android:orientation="vertical">

    <TextView
        android:id="@+id/fragment_questions_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_xlarge"
        android:layout_marginBottom="@dimen/gap_xlarge"
        android:layout_marginLeft="@dimen/gap_outer"
        android:layout_marginRight="@dimen/gap_outer"
        android:textAppearance="@style/AppTheme.Text.Question"
        android:gravity="center"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/fragment_questions_choices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:animateLayoutChanges="true"/>

    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <Button
            android:id="@+id/fragment_questions_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/gap_outer"
            android:layout_marginRight="@dimen/gap_outer"
            android:layout_gravity="center"
            android:text="@string/action_submit"
            android:visibility="invisible"
            style="@style/AppTheme.Button.Rounded" />

        <Button
            android:id="@+id/fragment_questions_skip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/AppTheme.Button.Borderless.Question"
            android:text="@string/action_skip_question"/>

    </FrameLayout>

</LinearLayout>
