<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/AppTheme.Card.Clickable"
    android:descendantFocusability="blocksDescendants">

    <include
        android:id="@+id/item_smart_alarm_enabled"
        android:layout_width="@dimen/widget_switch_width"
        android:layout_height="@dimen/widget_switch_height"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/gap_outer"
        layout="@layout/widget_switch" />

    <TextView
        android:id="@+id/item_smart_alarm_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_medium"
        android:layout_marginStart="@dimen/gap_outer"
        android:layout_marginEnd="@dimen/gap_tiny"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/AppTheme.Text.SmartAlarm.Time"/>

    <TextView
        android:id="@+id/item_smart_alarm_time_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_smart_alarm_time"
        android:layout_alignBaseline="@id/item_smart_alarm_time"
        android:textAppearance="@style/AppTheme.Text.SmartAlarm.Time.Period"/>

    <TextView
        android:id="@+id/item_smart_alarm_repeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/gap_outer"
        android:layout_marginTop="@dimen/gap_xsmall"
        android:layout_marginBottom="@dimen/gap_outer"
        android:layout_below="@id/item_smart_alarm_time"
        android:layout_toStartOf="@id/item_smart_alarm_enabled"
        android:textAppearance="@style/AppTheme.Text.SmartAlarm.Repeat"/>

</RelativeLayout>