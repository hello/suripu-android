<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <is.hello.sense.ui.widget.PanImageView
        android:id="@+id/fragment_onboarding_introduction_scene"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end|center_vertical"
        android:contentDescription="@string/welcome"
        app:panImage="@drawable/onboarding_intro_background" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/gap_outer"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_onboarding_intro_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textAppearance="@style/AppTheme.Text.Heading"
                android:lineSpacingMultiplier="@dimen/line_multiple_heading"
                android:text="@string/title_introduction"/>

            <TextView
                android:id="@+id/fragment_onboarding_intro_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/gap_medium"
                android:layout_below="@id/fragment_onboarding_intro_title"
                android:layout_alignParentStart="true"
                android:textAppearance="@style/AppTheme.Text.Subheading.Dark"
                android:lineSpacingMultiplier="@dimen/line_multiple_subheading"
                android:text="@string/info_introduction"/>

            <ImageView
                android:id="@+id/fragment_onboarding_intro_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/onboarding_intro_play"
                android:contentDescription="@string/action_play_video"/>

            <LinearLayout
                android:id="@+id/fragment_onboarding_intro_account_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:id="@+id/fragment_onboarding_intro_register"
                    android:layout_marginBottom="@dimen/gap_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/action_set_up_sense"
                    style="@style/AppTheme.Button.Rounded.Light"/>

                <Button
                    android:id="@+id/fragment_onboarding_intro_sign_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/action_log_in"
                    style="@style/AppTheme.Button.Rounded.Light"/>

                <Button
                    android:id="@+id/fragment_onboarding_intro_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/gap_medium"
                    android:text="@android:string/cancel"
                    style="@style/AppTheme.Button.Borderless.White"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_onboarding_intro_account_get_started"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:visibility="visible">

                <Button
                    android:id="@+id/fragment_onboarding_intro_get_started"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/action_get_started"
                    style="@style/AppTheme.Button.Rounded.Light"/>

                <Button
                    android:id="@+id/fragment_onboarding_intro_buy_sense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/gap_medium"
                    android:text="@string/action_buy_sense"
                    style="@style/AppTheme.Button.Borderless.White"/>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</FrameLayout>