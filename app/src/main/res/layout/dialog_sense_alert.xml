<?xml version="1.0" encoding="utf-8"?>
<is.hello.sense.ui.widget.RoundedLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:senseCornerRadius="@dimen/raised_item_corner_radius">

    <TextView
        android:id="@+id/dialog_sense_alert_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gap_outer"
        android:layout_marginRight="@dimen/gap_outer"
        android:layout_marginTop="@dimen/gap_outer"
        android:drawablePadding="@dimen/gap_medium"
        android:textAppearance="@style/AppTheme.Text.ScreenTitle"/>

    <!-- Lollipop 5.0 doesn't honor textColorLink in styles,
         it has to be included here to render correctly. -->
    <TextView
        android:id="@+id/dialog_sense_alert_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/gap_outer"
        android:layout_marginRight="@dimen/gap_outer"
        android:layout_marginTop="@dimen/gap_medium"
        android:layout_marginBottom="@dimen/gap_medium"
        android:textAppearance="@style/AppTheme.Text.Body"
        android:textColorLink="@color/text_link"
        android:lineSpacingMultiplier="@dimen/line_multiple_body"/>

    <View style="@style/Divider.Horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_sense_alert_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:padding="@dimen/gap_medium"
            android:text="@android:string/cancel"
            android:visibility="gone"
            style="@style/AppTheme.Button.Dialog"/>

        <View
            android:id="@+id/dialog_sense_alert_button_divider"
            android:layout_marginTop="@dimen/gap_medium"
            android:layout_marginBottom="@dimen/gap_medium"
            style="@style/Divider.Vertical"
            android:visibility="gone"/>

        <Button
            android:id="@+id/dialog_sense_alert_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:padding="@dimen/gap_medium"
            android:text="@android:string/ok"
            android:visibility="gone"
            style="@style/AppTheme.Button.Dialog.Positive"/>

    </LinearLayout>

</is.hello.sense.ui.widget.RoundedLinearLayout>