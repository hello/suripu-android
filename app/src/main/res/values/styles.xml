<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Themes -->

    <style name="AppTheme" parent="Platform.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textAppearance">@style/AppTheme.Text</item>

        <item name="android:popupMenuStyle">@style/AppTheme.PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/AppTheme.DropDownListView</item>
        <item name="android:actionBarTabStyle">@style/AppTheme.ActionBarTabStyle</item>
        <item name="android:actionDropDownStyle">@style/AppTheme.DropDownNav</item>
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar.Solid</item>
        <item name="android:actionModeBackground">@drawable/app_theme_cab_background_top</item>
        <item name="android:actionModeSplitBackground">@drawable/app_theme_cab_background_bottom
        </item>
        <item name="android:actionModeCloseButtonStyle">@style/AppTheme.ActionButton.CloseMode
        </item>
        <item name="android:actionOverflowButtonStyle">@style/ActionOverflow</item>
        <item name="android:actionMenuTextAppearance">@style/AppTheme.Text.ActionMenu</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:actionButtonStyle">@style/AppTheme.ActionButton</item>
        <item name="android:actionBarSize">@dimen/action_bar_height</item>
        <item name="android:homeAsUpIndicator">@drawable/app_style_ab_up</item>

        <item name="android:buttonStyle">@style/AppTheme.Button</item>
        <item name="android:imageButtonStyle">@style/AppTheme.Button.Borderless</item>
        <item name="android:editTextStyle">@style/AppTheme.Text.EditText</item>
        <item name="android:alertDialogStyle">@style/AppTheme.Dialog</item>
        <item name="android:spinnerStyle">@style/AppTheme.Spinner</item>
        <item name="android:progressBarStyle">@style/AppTheme.ProgressBar</item>
        <item name="android:progressBarStyleSmall">@style/AppTheme.ProgressBar.Tiny</item>
        <item name="android:textColorLink">@color/link_text_selector</item>

        <item name="android:listSelector">@drawable/selectable_dark_bounded</item>
        <item name="android:listDivider">@color/border</item>
        <item name="android:dividerHeight">@dimen/divider_size</item>

        <item name="senseTextAppearanceHeading">@style/Title2.Primary
        </item> <!-- todo confirm this doesn't break something -->
        <item name="senseTextAppearanceSubheading">@style/Body1.Secondary</item>
        <item name="senseTextAppearanceFieldLabel">@style/Body1.Hint</item>

        <item name="senseBackgroundSecondary">@color/background_card</item>
    </style>

    <style name="AppTheme.Onboarding" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@color/onboarding_background</item>
    </style>

    <style name="AppTheme.Expansions" parent="AppTheme">
        <item name="android:windowBackground">@color/expansions_background</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTitleSize">0dp</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/status_bar_normal</item>
    </style>

    <style name="AppTheme.NoActionBar.Black">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/black</item>
    </style>

    <!-- Action Bar -->

    <style name="AppTheme.ActionBar" parent="Platform.ActionBar"/>

    <style name="AppTheme.ActionBar.Solid">
        <item name="android:background">@color/primary</item>
        <item name="android:backgroundStacked">@color/primary</item>
        <item name="android:backgroundSplit">@color/primary</item>
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/AppTheme.Text.ActionTitle</item>
        <item name="android:subtitleTextStyle">@style/AppTheme.Text.ActionSubtitle</item>
    </style>

    <style name="AppTheme.Text.ActionTitle">
        <item name="android:textSize">@dimen/text_h5</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.Text.ActionSubtitle">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:paddingTop">2dp</item>
    </style>

    <style name="AppTheme.Text.ActionMenu">
        <item name="android:textSize">@dimen/text_h6_3</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.ActionButton" parent="android:Widget.Holo.Light.ActionButton">
        <item name="android:textSize">@dimen/text_h6_5</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">@dimen/x3</item>
        <item name="android:paddingRight">@dimen/x3</item>
    </style>

    <style name="AppTheme.PopupMenu" parent="Platform.ListPopupWindow">
        <item name="android:popupBackground">@drawable/app_theme_menu_dropdown_panel</item>
    </style>

    <style name="AppTheme.DropDownListView" parent="Platform.ListDropDown">
        <item name="android:listSelector">@drawable/app_theme_selectable_background</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="AppTheme.ActionBarTabStyle" parent="Platform.ActionBar.TabView">
        <item name="android:background">@drawable/app_theme_tab_indicator_ab</item>
    </style>

    <style name="AppTheme.DropDownNav" parent="Platform.Spinner">
        <item name="android:background">@drawable/spinner_background_selector</item>
        <item name="android:popupBackground">@drawable/app_theme_menu_dropdown_panel</item>
        <item name="android:dropDownSelector">@drawable/app_theme_selectable_background</item>
    </style>

    <style name="AppTheme.ActionButton.CloseMode" parent="Platform.ActionBar.ButtonCloseMode">
        <item name="android:background">@drawable/app_theme_btn_cab_done</item>
    </style>

    <style name="ActionOverflow" parent="Platform.ActionBar.ButtonOverflow">
        <item name="android:src">@drawable/action_overflow</item>
    </style>

    <!-- Dialogs -->

    <style name="AppTheme.Dialog" parent="Platform.Dialog">
        <item name="android:progressBarStyle">@style/AppTheme.ProgressBar</item>
        <item name="android:progressBarStyleSmall">@style/AppTheme.ProgressBar.Tiny</item>
    </style>

    <style name="AppTheme.Dialog.Simple" parent="Platform.Dialog.MinWidth">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/background_card_large</item>
    </style>

    <style name="AppTheme.Dialog.List">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="AppTheme.Dialog.FullScreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimations.Fade</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/status_bar_normal</item>
    </style>

    <style name="AppTheme.Dialog.FullScreen.Insight">
        <item name="android:windowAnimationStyle">@style/WindowAnimations.Fade</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/status_bar_normal</item>
    </style>

    <style name="AppTheme.Dialog.Loading" parent="AppTheme.Dialog.FullScreen">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.Dialog.BottomSheet" parent="Platform.Dialog.NoElevation">
        <item name="android:windowBackground">@color/background_card</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimations.BottomSlide</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="AppTheme.Dialog.BottomAlert" parent="AppTheme.Dialog.BottomSheet">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="WindowAnimations" parent="android:style/Animation"/>

    <style name="WindowAnimations.FadeOut">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@anim/anime_fade_out</item>
    </style>

    <style name="WindowAnimations.Fade">
        <item name="android:windowEnterAnimation">@anim/anime_fade_in</item>
        <item name="android:windowExitAnimation">@anim/anime_fade_out</item>
    </style>

    <style name="WindowAnimations.BottomSlide">
        <item name="android:windowEnterAnimation">@anim/anime_bottom_slide_up</item>
        <item name="android:windowExitAnimation">@anim/anime_bottom_slide_down</item>
    </style>

    <!-- Buttons -->

    <style name="AppTheme.Button" parent="Platform.Button">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textAppearance">@style/AppTheme.Text.Header.H6.Medium</item>
        <item name="android:background">@drawable/sense_raised_button_selector</item>
    </style>

    <style name="AppTheme.Button.Borderless">
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">@dimen/x1</item>
        <item name="android:paddingLeft">@dimen/x1</item>
        <item name="android:paddingRight">@dimen/x1</item>
        <item name="android:paddingBottom">@dimen/x1</item>
        <item name="android:background">@drawable/selectable_dark</item>
    </style>

    <style name="AppTheme.Button.Borderless.Accent">
        <item name="android:textColor">@color/link_text_selector</item>
    </style>

    <style name="AppTheme.Button.Borderless.Accent.Bounded">
        <item name="android:background">@drawable/selectable_dark_bounded</item>
    </style>

    <style name="AppTheme.Button.Borderless.Accent.Bounded.Lowercase">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.Button.Borderless.Question">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/x3</item>
        <item name="android:paddingLeft">@dimen/x3</item>
        <item name="android:paddingRight">@dimen/x3</item>
        <item name="android:paddingBottom">@dimen/x3</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/text_h6_3</item>
        <item name="android:background">@drawable/selectable_dark_bounded</item>
    </style>

    <style name="AppTheme.Button.Borderless.Question.Choice">
        <item name="android:textColor">@color/link_text_selector</item>
    </style>

    <style name="AppTheme.Button.Rounded">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:background">@drawable/sense_raised_button_selector</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textSize">@dimen/text_h6_5</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>
\
    <style name="AppTheme.Button.ModeSelector">
        <item name="android:background">@drawable/selectable_dark_bounded</item>
        <item name="android:textColor">@color/text_color_selector_toggle_button</item>
        <item name="android:textAppearance">@style/Body1</item>
        <item name="android:paddingTop">@dimen/x2</item>
        <item name="android:paddingLeft">@dimen/x2</item>
        <item name="android:paddingRight">@dimen/x2</item>
        <item name="android:paddingBottom">@dimen/x2</item>
    </style>

    <style name="AppTheme.Button.Facebook">
        <item name="android:paddingTop">@dimen/x2</item>
        <item name="android:paddingBottom">@dimen/x2</item>
        <item name="android:paddingLeft">@dimen/x3</item>
        <item name="android:paddingRight">@dimen/x3</item>
        <item name="android:background">@drawable/facebook_autofill_selector</item>
        <item name="android:textColor">@color/facebook_autofill_text_color_selector</item>
        <item name="android:drawableLeft">@drawable/facebook_logo_selector</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:text">@string/action_autofill_from_facebook</item>
    </style>

    <style name="AppTheme.Button.Dialog" parent="AppTheme.Button.Borderless">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/link_text_selector</item>
        <item name="android:background">@drawable/selectable_dark_bounded</item>
        <item name="android:textSize">@dimen/text_h6_3</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppTheme.Button.Dialog.Alert">
        <item name="android:paddingLeft">@dimen/x1</item>
        <item name="android:paddingRight">@dimen/x1</item>
        <item name="android:paddingTop">@dimen/x1</item>
        <item name="android:paddingBottom">@dimen/x1</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.Button.Dialog.Positive">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.Button.Borderless.Primary">
        <item name="android:paddingTop">@dimen/x1</item>
        <item name="android:paddingLeft">@dimen/x1</item>
        <item name="android:paddingRight">@dimen/x1</item>
        <item name="android:paddingBottom">@dimen/x1</item>
        <item name="android:minHeight">56dp</item>

        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/selectable_dark_bounded</item>
        <item name="android:textSize">@dimen/text_h6_3</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/link_text_selector</item>
    </style>

    <style name="AppTheme.Button.Borderless.Primary.Bottom">
        <item name="android:background">@drawable/selectable_dark_bounded_bottom</item>
    </style>

    <!-- Spinners -->

    <style name="AppTheme.Spinner" parent="Platform.Spinner">
        <item name="android:background">@drawable/spinner_background_selector</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:popupBackground">@drawable/app_theme_menu_dropdown_panel</item>
        <item name="android:dropDownSelector">@drawable/app_theme_selectable_background</item>
    </style>

    <style name="AppTheme.Spinner.Borderless">
        <item name="android:background">@color/transparent</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <!-- Dividers -->

    <style name="Divider">
        <item name="android:background">@color/border</item>
    </style>

    <style name="Divider.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_size</item>
        <item name="android:color">@color/divider</item>
    </style>


    <style name="Divider.Horizontal.LeftInset">
        <item name="android:layout_marginLeft">
            @dimen/x2
        </item>
    </style>

    <style name="Divider.Horizontal.Padded">
        <item name="android:layout_marginTop">@dimen/x1</item>
        <item name="android:layout_marginBottom">@dimen/x1</item>
    </style>

    <style name="Divider.Vertical">
        <item name="android:layout_width">@dimen/divider_size</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- EditText -->
    <!-- todo confirm this is needed -->
    <style name="EditText" parent="Platform.EditText">
        <item name="android:paddingTop">@dimen/x1</item>
        <item name="android:paddingBottom">@dimen/x1</item>
        <item name="android:paddingLeft">@dimen/x.25</item>
        <item name="android:paddingRight">@dimen/x.25</item>

        <item name="android:background">@drawable/edit_text_background_selector</item>
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textAppearance">@style/Body1.Primary</item>
        <item name="android:minHeight">@dimen/text_body_line_height</item>
    </style>

    <style name="AppTheme.Text.EditText" parent="Platform.EditText">
        <item name="android:minHeight">@dimen/edit_text_min_height</item>

        <item name="android:paddingTop">@dimen/x1</item>
        <item name="android:paddingBottom">@dimen/x1</item>
        <item name="android:paddingLeft">@dimen/x.25</item>
        <item name="android:paddingRight">@dimen/x.25</item>

        <item name="android:background">@drawable/edit_text_background_selector</item>
        <item name="android:textSize">@dimen/text_h6_3</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.Text.EditText.Onboarding">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@drawable/onboarding_edittext_selector</item>
        <item name="android:minHeight">@dimen/text_body_line_height</item>
    </style>

    <!-- Specific Tinting -->

    <style name="TintOverride"/>

    <style name="TintOverride.SleepScore"/>

    <style name="TintOverride.SleepScore.Ideal"/>

    <style name="TintOverride.SleepScore.Warning"/>

    <style name="TintOverride.SleepScore.Alert"/>

    <!-- Other -->

