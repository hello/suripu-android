<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Themes -->

    <style name="AppTheme" parent="Platform.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textAppearance">@style/AppTheme.Text</item>

        <item name="android:popupMenuStyle">@style/AppTheme.PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/AppTheme.DropDownListView</item>
        <item name="android:actionBarTabStyle">@style/AppTheme.ActionBarTabStyle</item>
        <item name="android:actionDropDownStyle">@style/AppTheme.DropDownNav</item>
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar.Solid</item>
        <item name="android:actionModeBackground">@drawable/app_theme_cab_background_top</item>
        <item name="android:actionModeSplitBackground">@drawable/app_theme_cab_background_bottom</item>
        <item name="android:actionModeCloseButtonStyle">@style/AppTheme.ActionButton.CloseMode</item>
        <item name="android:actionOverflowButtonStyle">@style/ActionOverflow</item>
        <item name="android:actionMenuTextAppearance">@style/AppTheme.Text.ActionMenu</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:actionButtonStyle">@style/AppTheme.ActionButton</item>
        <item name="android:actionBarSize">@dimen/action_bar_height</item>
        <item name="android:homeAsUpIndicator">@drawable/app_style_ab_up</item>

        <item name="android:buttonStyle">@style/AppTheme.Button</item>
        <item name="android:imageButtonStyle">@style/AppTheme.Button.Borderless</item>
        <item name="android:editTextStyle">@style/AppTheme.Text.EditText</item>
        <item name="android:alertDialogStyle">@style/AppTheme.Dialog</item>
        <item name="android:spinnerStyle">@style/AppTheme.Spinner</item>
        <item name="android:progressBarStyle">@style/AppTheme.ProgressBar</item>
        <item name="android:progressBarStyleSmall">@style/AppTheme.ProgressBar.Tiny</item>
        <item name="android:textColorLink">@color/text_link</item>

        <item name="android:listSelector">@drawable/selectable_dark_bounded</item>
        <item name="android:listDivider">@color/border</item>
        <item name="android:dividerHeight">@dimen/divider_size</item>

        <item name="senseTextAppearanceHeading">@style/AppTheme.Text.Heading.New</item>
        <item name="senseTextAppearanceSubheading">@style/AppTheme.Text.Body.MidSized.Dim</item>
        <item name="senseTextAppearanceFieldLabel">@style/AppTheme.Text.Body.Small.New</item>
    </style>

    <style name="AppTheme.Onboarding" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@color/background_onboarding</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTitleSize">0dp</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/status_bar_grey</item>
    </style>

    <style name="AppTheme.NoActionBar.Black">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/black</item>
    </style>

    <!-- Action Bar -->

    <style name="AppTheme.ActionBar" parent="Platform.ActionBar" />

    <style name="AppTheme.ActionBar.Solid">
        <item name="android:background">@color/light_accent</item>
        <item name="android:backgroundStacked">@color/light_accent</item>
        <item name="android:backgroundSplit">@color/light_accent</item>
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/AppTheme.Text.ActionTitle</item>
        <item name="android:subtitleTextStyle">@style/AppTheme.Text.ActionSubtitle</item>
    </style>

    <style name="AppTheme.Text.ActionTitle">
        <item name="android:textSize">@dimen/action_bar_title_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.Text.ActionSubtitle">
        <item name="android:textSize">@dimen/action_bar_subtitle_text_size</item>
        <item name="android:textColor">@color/text_dim_light</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:paddingTop">2dp</item>
    </style>

    <style name="AppTheme.Text.ActionMenu">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.ActionButton" parent="android:Widget.Holo.Light.ActionButton">
        <item name="android:textSize">@dimen/text_size_body_mid_sized</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">@dimen/gap_outer</item>
        <item name="android:paddingRight">@dimen/gap_outer</item>
    </style>

    <style name="AppTheme.PopupMenu" parent="Platform.ListPopupWindow">
        <item name="android:popupBackground">@drawable/app_theme_menu_dropdown_panel</item>
    </style>

    <style name="AppTheme.DropDownListView" parent="Platform.ListDropDown">
        <item name="android:listSelector">@drawable/app_theme_selectable_background</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="AppTheme.ActionBarTabStyle" parent="Platform.ActionBar.TabView">
        <item name="android:background">@drawable/app_theme_tab_indicator_ab</item>
    </style>

    <style name="AppTheme.DropDownNav" parent="Platform.Spinner">
        <item name="android:background">@drawable/spinner_background_selector</item>
        <item name="android:popupBackground">@drawable/app_theme_menu_dropdown_panel</item>
        <item name="android:dropDownSelector">@drawable/app_theme_selectable_background</item>
    </style>

    <style name="AppTheme.ActionButton.CloseMode" parent="Platform.ActionBar.ButtonCloseMode">
        <item name="android:background">@drawable/app_theme_btn_cab_done</item>
    </style>

    <style name="ActionOverflow" parent="Platform.ActionBar.ButtonOverflow">
        <item name="android:src">@drawable/action_overflow</item>
    </style>

    <!-- Dialogs -->

    <style name="AppTheme.Dialog" parent="Platform.Dialog">
        <item name="android:progressBarStyle">@style/AppTheme.ProgressBar</item>
        <item name="android:progressBarStyleSmall">@style/AppTheme.ProgressBar.Tiny</item>
    </style>

    <style name="AppTheme.Dialog.Simple" parent="Platform.Dialog.MinWidth">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/background_card_large</item>
    </style>

    <style name="AppTheme.Dialog.List">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="AppTheme.Dialog.FullScreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimations.Fade</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/status_bar_grey</item>
    </style>

    <style name="AppTheme.Dialog.Loading" parent="AppTheme.Dialog.FullScreen">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.Dialog.BottomSheet" parent="Platform.Dialog.NoElevation">
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimations.BottomSlide</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="AppTheme.Dialog.BottomAlert" parent="Platform.Dialog.NoElevation">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimations.BottomSlide</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="WindowAnimations" parent="android:style/Animation" />

    <style name="WindowAnimations.FadeOut">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@anim/anime_fade_out</item>
    </style>

    <style name="WindowAnimations.Fade">
        <item name="android:windowEnterAnimation">@anim/anime_fade_in</item>
        <item name="android:windowExitAnimation">@anim/anime_fade_out</item>
    </style>

    <style name="WindowAnimations.BottomSlide">
        <item name="android:windowEnterAnimation">@anim/anime_bottom_slide_up</item>
        <item name="android:windowExitAnimation">@anim/anime_bottom_slide_down</item>
    </style>

    <!-- Buttons -->

    <style name="AppTheme.Button" parent="Platform.Button">
        <item name="android:minHeight">@dimen/button_min_size</item>
        <item name="android:textAppearance">@style/AppTheme.Text.Button</item>
        <item name="android:background">@drawable/button_background_selector_simple</item>
    </style>

    <style name="AppTheme.Button.Borderless">
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">@dimen/gap_small</item>
        <item name="android:paddingLeft">@dimen/gap_small</item>
        <item name="android:paddingRight">@dimen/gap_small</item>
        <item name="android:paddingBottom">@dimen/gap_small</item>
        <item name="android:background">@drawable/selectable_dark</item>
    </style>

    <style name="AppTheme.Button.Borderless.Accent">
        <item name="android:textColor">@color/text_color_selector_light_accent</item>
    </style>

    <style name="AppTheme.Button.Borderless.Accent.Bounded">
        <item name="android:background">@drawable/selectable_dark_bounded</item>
    </style>

    <style name="AppTheme.Button.Borderless.Question">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/gap_outer</item>
        <item name="android:paddingLeft">@dimen/gap_outer</item>
        <item name="android:paddingRight">@dimen/gap_outer</item>
        <item name="android:paddingBottom">@dimen/gap_outer</item>
        <item name="android:textColor">@color/text_body_new</item>
        <item name="android:textSize">@dimen/text_size_button_large</item>
        <item name="android:background">@drawable/selectable_dark_bounded</item>
    </style>

    <style name="AppTheme.Button.Borderless.Question.Choice">
        <item name="android:textColor">@color/text_color_selector_light_accent</item>
    </style>

    <style name="AppTheme.Button.Borderless.White">
        <item name="android:background">@drawable/selectable_light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Button.Rounded">
        <item name="android:minHeight">@dimen/button_rounded_min_height</item>
        <item name="android:background">@drawable/selector_button_rounded</item>
        <item name="android:textColor">@color/text_white_button</item>
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Button.Rounded.Light">
        <item name="android:background">@drawable/selector_button_rounded_white</item>
        <item name="android:textColor">@color/text_white_button</item>
    </style>

    <style name="AppTheme.Button.ModeSelector">
        <item name="android:background">@drawable/selectable_dark_bounded</item>
        <item name="android:textColor">@color/text_color_selector_toggle_button</item>
        <item name="android:textAppearance">@style/AppTheme.Text.Body</item>
        <item name="android:paddingTop">@dimen/gap_medium</item>
        <item name="android:paddingLeft">@dimen/gap_medium</item>
        <item name="android:paddingRight">@dimen/gap_medium</item>
        <item name="android:paddingBottom">@dimen/gap_medium</item>
    </style>

    <style name="AppTheme.Button.Gender" parent="AppTheme.Button.Borderless.Accent">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_button_large</item>
        <item name="android:paddingTop">36dp</item>
        <item name="android:paddingLeft">36dp</item>
        <item name="android:paddingRight">36dp</item>
        <item name="android:paddingBottom">36dp</item>
    </style>

    <style name="AppTheme.Button.Gender.Left" parent="AppTheme.Button.Gender">
        <item name="android:background">@drawable/button_selector_gender_left</item>
    </style>

    <style name="AppTheme.Button.Gender.Right" parent="AppTheme.Button.Gender">
        <item name="android:background">@drawable/button_selector_gender_right</item>
    </style>
    
    <style name="AppTheme.Button.Number" parent="AppTheme.Button.Dialog.Positive">
        <item name="android:minHeight">@dimen/button_rounded_min_height</item>
        <item name="android:background">@drawable/button_selector_number</item>
        <item name="android:hapticFeedbackEnabled">true</item>
    </style>

    <style name="AppTheme.Button.Raised">
        <item name="android:minHeight">@dimen/button_min_size_small</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingLeft">@dimen/gap_small</item>
        <item name="android:paddingRight">@dimen/gap_small</item>
        <item name="android:background">@drawable/raised_item_selector</item>
        <item name="android:textColor">@color/text_color_selector_light_accent</item>
        <item name="android:textAppearance">@style/AppTheme.Text.SectionHeading</item>
    </style>

    <style name="AppTheme.Button.Dialog" parent="AppTheme.Button.Borderless">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/text_color_selector_light_accent</item>
        <item name="android:background">@drawable/selectable_dark_bounded</item>
        <item name="android:textSize">@dimen/text_size_button_large</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppTheme.Button.Dialog.Alert">
        <item name="android:paddingLeft">@dimen/gap_small</item>
        <item name="android:paddingRight">@dimen/gap_small</item>
        <item name="android:paddingTop">@dimen/gap_small</item>
        <item name="android:paddingBottom">@dimen/gap_small</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.Button.Dialog.Positive">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.Button.Circular">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:minWidth">@dimen/button_circular_area</item>
        <item name="android:minHeight">@dimen/button_circular_area</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_oval_selector</item>
    </style>

    <!-- Spinners -->

    <style name="AppTheme.Spinner" parent="Platform.Spinner">
        <item name="android:background">@drawable/spinner_background_selector</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:popupBackground">@drawable/app_theme_menu_dropdown_panel</item>
        <item name="android:dropDownSelector">@drawable/app_theme_selectable_background</item>
    </style>

    <style name="AppTheme.Spinner.Borderless">
        <item name="android:background">@color/transparent</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <!-- Dividers -->

    <style name="Divider">
        <item name="android:background">@color/border</item>
    </style>

    <style name="Divider.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_size</item>
        <item name="android:color">@color/border</item>
    </style>

    <style name="Divider.Horizontal.Padded">
        <item name="android:layout_marginTop">@dimen/gap_small</item>
        <item name="android:layout_marginBottom">@dimen/gap_small</item>
    </style>

    <style name="Divider.Vertical">
        <item name="android:layout_width">@dimen/divider_size</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- EditText -->

    <style name="AppTheme.Text.EditText" parent="Platform.EditText">
        <item name="android:minHeight">@dimen/edit_text_min_height</item>

        <item name="android:paddingTop">@dimen/gap_small</item>
        <item name="android:paddingBottom">@dimen/gap_small</item>
        <item name="android:paddingLeft">@dimen/gap_tiny</item>
        <item name="android:paddingRight">@dimen/gap_tiny</item>

        <item name="android:background">@drawable/edit_text_selector</item>

        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="AppTheme.Text.EditText.Onboarding">
        <item name="android:textSize">@dimen/text_size_subheading</item>
    </style>

    <!-- Specific Tinting -->

    <style name="TintOverride" />
    <style name="TintOverride.SleepScore" />
    <style name="TintOverride.SleepScore.Ideal" />
    <style name="TintOverride.SleepScore.Warning" />
    <style name="TintOverride.SleepScore.Alert" />

    <!-- Other -->

    <style name="AppTheme.Card">
        <item name="android:background">@drawable/raised_item_normal</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="senseCornerRadius">@dimen/raised_item_corner_radius</item>
    </style>

    <style name="AppTheme.LargeCard">
        <item name="android:background">@drawable/background_card_large</item>
        <item name="senseCornerRadius">@dimen/card_large_corner_radius</item>
    </style>

    <style name="AppTheme.Card.Clickable">
        <item name="android:background">@drawable/raised_item_selector</item>
    </style>

    <style name="AppTheme.Card.Item" parent="AppTheme.Text.Body.New">
        <item name="android:paddingLeft">@dimen/gap_medium</item>
        <item name="android:paddingRight">@dimen/gap_medium</item>
        <item name="android:paddingTop">@dimen/gap_medium</item>
        <item name="android:paddingBottom">@dimen/gap_medium</item>
        <item name="android:background">@drawable/selectable_dark_bounded</item>
    </style>

    <style name="AppTheme.FadingScrollView">
        <item name="android:fillViewport">true</item>
        <item name="android:fadingEdge">vertical</item>
        <item name="android:requiresFadingEdge">vertical</item>
        <item name="android:fadingEdgeLength">@dimen/shadow_size</item>
        <item name="android:background">@color/shadow_end</item>
    </style>

    <!-- Progress Bars -->

    <style name="AppTheme.ProgressBar" parent="android:Widget.Holo.ProgressBar">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/animated_progress_bar</item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:minWidth">55dp</item>
        <item name="android:maxWidth">55dp</item>
        <item name="android:minHeight">55dp</item>
        <item name="android:maxHeight">55dp</item>
    </style>

    <style name="AppTheme.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/animated_progress_bar_small</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:maxWidth">40dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:maxHeight">40dp</item>
    </style>

    <style name="AppTheme.ProgressBar.Tiny">
        <item name="android:indeterminateDrawable">@drawable/animated_progress_bar_tiny</item>
        <item name="android:minWidth">20dp</item>
        <item name="android:maxWidth">20dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>

</resources>
