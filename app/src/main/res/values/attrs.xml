<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Workaround preventing Zendesk from bringing in AppCompat -->
    <attr name="showAsAction" format="string" />
    <!-- end workaround -->

    <attr name="senseTextAppearanceHeading" format="reference" />
    <attr name="senseTextAppearanceSubheading" format="reference" />
    <attr name="senseTextAppearanceFieldLabel" format="reference" />

    <declare-styleable name="GraphView">
        <attr name="senseNumberOfLines" format="integer" />
        <attr name="senseGridDrawable" format="integer" />
        <attr name="senseWantsHeaders" format="boolean" />
        <attr name="senseWantsFooters" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ScaleView">
        <attr name="scaleOrientation" format="enum">
            <enum name="vertical" value="0" />
            <enum name="horizontal" value="1" />
        </attr>
        <attr name="scaleMinValue" format="integer" />
        <attr name="scaleMaxValue" format="integer" />
        <attr name="scaleValue" format="integer" />
    </declare-styleable>

    <declare-styleable name="PageDots">
        <attr name="dotStyle" format="enum">
            <enum name="white" value="0" />
            <enum name="blue" value="1" />
        </attr>
    </declare-styleable>

    <!-- Used by RoundedLinearLayout and RoundedRelativeLayout -->
    <declare-styleable name="RoundedLayout">
        <attr name="senseCornerRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="RotaryPickerView">
        <attr name="senseItemBackground" format="reference" />
        <attr name="senseWantsLeadingZeros" format="reference" />
        <attr name="unfocusedItemCount" format="reference" />
        <attr name="android:gravity" />
    </declare-styleable>

    <declare-styleable name="DiagramVideoView">
        <attr name="senseDiagramVideo" format="string" />
        <attr name="sensePlaceholder" format="reference" />
        <attr name="senseAutoStart" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ParallaxImageView">
        <attr name="senseParallaxClip" format="integer" />
        <attr name="senseParallaxPercent" format="float" />
        <attr name="senseAspectRatio" format="string" />
        <attr name="senseLoadingView" format="reference" />
    </declare-styleable>
    
    <declare-styleable name="ExtendedScrollView">
        <attr name="senseFadingEdgeStyle" format="enum">
            <enum name="none" value="0" />
            <enum name="rounded" value="1" />
            <enum name="straight" value="2" />
        </attr>
        <attr name="senseScrollingEnabled" format="boolean" />
    </declare-styleable>
</resources>