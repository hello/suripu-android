<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="fontPath" format="string"/>

    <declare-styleable name="GraphView">
        <attr name="senseNumberOfLines" format="integer" />
        <attr name="senseGridDrawable" format="integer" />
        <attr name="senseWantsHeaders" format="boolean" />
        <attr name="senseWantsFooters" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ScaleView">
        <attr name="scaleOrientation" format="enum">
            <enum name="vertical" value="0" />
            <enum name="horizontal" value="1" />
        </attr>
        <attr name="scaleMinValue" format="integer" />
        <attr name="scaleMaxValue" format="integer" />
        <attr name="scaleValue" format="integer" />
    </declare-styleable>

    <declare-styleable name="PanImageView">
        <attr name="panImage" format="reference" />
        <attr name="panAmount" format="float" />
    </declare-styleable>

    <declare-styleable name="PageDots">
        <attr name="dotStyle" format="enum">
            <enum name="white" value="0" />
            <enum name="blue" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SensorConditionView">
        <attr name="senseSensorIcon" format="reference" />
    </declare-styleable>

    <!-- Used by RoundedLinearLayout and RoundedRelativeLayout -->
    <declare-styleable name="RoundedLayout">
        <attr name="senseCornerRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="RotaryPickerView">
        <attr name="senseTextAppearance" format="reference" />
        <attr name="senseItemBackground" format="reference" />
        <attr name="senseWantsLeadingZeros" format="reference" />
        <attr name="android:gravity" />
    </declare-styleable>

    <declare-styleable name="DiagramVideoView">
        <attr name="senseDiagramVideo" format="string" />
        <attr name="sensePlaceholder" format="reference" />
    </declare-styleable>
</resources>