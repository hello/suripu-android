<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:exitFadeDuration="@integer/anime_duration_fast"
    android:enterFadeDuration="@integer/anime_duration_fast">
    <item
        android:state_activated="true"
        android:drawable="@drawable/loading_done" />
    <item>
        <rotate
                android:pivotX="50%"
                android:pivotY="50%"
                android:fromDegrees="0"
                android:toDegrees="360"
                android:interpolator="@android:interpolator/linear"
                android:duration="1000"
                android:drawable="@drawable/progress_bar_small" />
    </item>
</selector>
