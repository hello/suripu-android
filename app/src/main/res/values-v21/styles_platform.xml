<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Platform" />
    <style name="Platform.Light" parent="android:Theme.Material.Light">
        <item name="android:colorPrimary">@color/light_accent</item>
        <item name="android:colorPrimaryDark">@color/light_accent_darkened</item>
        <item name="android:colorAccent">@color/light_accent</item>
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:progressBarStyle">@android:style/Widget.Holo.ProgressBar</item>

        <item name="android:dialogTheme">@style/Platform.Dialog</item>
    </style>
    <style name="Platform.ActionBar" parent="android:Widget.Material.ActionBar.Solid">
        <item name="android:elevation">0dp</item>
    </style>
    <style name="Platform.ListPopupWindow" parent="android:style/Widget.Material.Light.ListPopupWindow" />
    <style name="Platform.ListDropDown" parent="android:Widget.Material.Light.ListView.DropDown" />
    <style name="Platform.ActionBar.TabView" parent="android:Widget.Material.Light.ActionBar.TabView" />
    <style name="Platform.ActionBar.ButtonCloseMode" parent="android:Widget.Material.Light.ActionButton.CloseMode" />
    <style name="Platform.ActionBar.ButtonOverflow" parent="android:style/Widget.Material.ActionButton.Overflow" />
    <style name="Platform.Dialog" parent="android:Theme.Material.Light.Dialog.MinWidth">
        <item name="android:colorPrimary">@color/light_accent</item>
        <item name="android:colorPrimaryDark">@color/light_accent_darkened</item>
        <item name="android:colorAccent">@color/light_accent</item>
    </style>
    <style name="Platform.Dialog.MinWidth" parent="android:Theme.Material.Light.Dialog.MinWidth">
        <item name="android:colorPrimary">@color/light_accent</item>
        <item name="android:colorPrimaryDark">@color/light_accent_darkened</item>
        <item name="android:colorAccent">@color/light_accent</item>
    </style>
    <style name="Platform.Spinner" parent="android:style/Widget.Holo.Light.Spinner">
        <item name="android:elevation">0dp</item>
    </style>
    <style name="Platform.Button" parent="android:Widget.Holo.Light.Button">
        <!-- Using the Material button here results in unwanted shadows -->
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="Platform.EditText" parent="android:Widget.Material.Light.EditText">
        <item name="android:elevation">0dp</item>
    </style>
</resources>